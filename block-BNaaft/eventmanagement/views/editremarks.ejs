<%- include('./partials/header.ejs')%> <%-
include('./partials/fontAwesome.ejs')%>
<main>
  <section class="center">
    <form action="/event/remark/<%=remark.id%>" method="POST" class="remark-form-container">
      <input type="text" name="author" placeholder="Enter your name here" value="<%= remark.author %>"/>
      <textarea
        name="content"
        cols="30"
        rows="10"
        placeholder="update comment"
      ><%= remark.content %></textarea>
      <input type="submit" value="submit"/>
    </form>
  </section>
</main>
